<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.suda.yzune.wakeupschedule.view.AboutActivity">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="8dp"
            android:text="关于"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="24dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="16dp"
                android:paddingLeft="48dp"
                android:paddingRight="48dp"
                android:paddingTop="16dp"
                android:text="版本号：1.01\n\nWakeUp课程表\n\n由WakeUp俱乐部开发\n\nWakUp俱乐部已经发布了三款Android应用\n\n近期将上架到酷安市场" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="32dp"
                android:gravity="center_horizontal"
                android:text="关于WakeUp俱乐部"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="\n不辜负每一个清晨 | 用心发现梦想" />

            <TextView
                android:lineSpacingExtra="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:paddingLeft="48dp"
                android:paddingRight="48dp"
                android:text="「 苏州大学WakeUp俱乐部 」由13级马惠荣学姐创办，旨在鼓励大学生早睡早起，不辜负每一个清晨，时刻做一个醒着的人。在2017年毕业季上，熊思东校长在毕业典礼上表扬了创始人马惠荣学姐，是她通过社团将“不辜负每一个清晨”的理念带入我们的校园。社团的主要活动有: 早起签到，周末夜跑，读书交流，早餐日等活动，社团在天赐庄、阳澄湖、独墅湖校区均有招新，欢迎加入！关注我们的微信公众号和QQ公众号了解更多。" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="48dp"
                android:gravity="center_horizontal"
                android:text="WakeUp俱乐部联系方式"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="\nQQ交流群：577789383" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="\nQQ公众号：3173396816" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="\n微信公众号：szdxcx" />

            <TextView
                android:layout_marginBottom="240dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="\n对App有任何的建议\n\n欢迎点击侧栏的“反馈”" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
